<Register>:
    name: 'inscrire'

    MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(20)
        padding: dp(20)
        adaptive_height: True

        MDLabel:
            text: 'INSCRIPTION'
            halign: 'center'
            font_style: 'H4'
            size_hint_y: None
            height: self.texture_size[1]

        MDCard:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(380), dp(520)
            pos_hint: {'center_x': 0.5}
            elevation: 12
            padding: dp(20)
            spacing: dp(10)
            radius: [20, 20, 20, 20]

            MDTextField:
                id: username
                icon_right: 'account'
                hint_text: "Nom d'utilisateur"
                mode: "rectangle"

            MDTextField:
                id: mail
                icon_right: 'email'
                hint_text: "Adresse email"
                mode: "rectangle"

            MDTextField:
                id: password
                icon_right: 'lock'
                hint_text: "Mot de passe"
                password: True
                mode: "rectangle"

            MDTextField:
                id: adresse
                icon_right: 'home'
                hint_text: "Adresse de résidence"
                mode: "rectangle"

            MDTextField:
                id: telephone
                icon_right: 'phone'
                hint_text: "Numéro de téléphone"
                mode: "rectangle"

            MDTextField:
                id: photo_path
                hint_text: "Chemin de la photo (lecture seule)"
                icon_right: "image"
                readonly: True
                mode: "rectangle"

            MDRaisedButton:
                text: "Choisir une photo"
                icon: "folder"
                pos_hint: {"center_x": 0.5}
                on_release: root.open_file_manager()

            MDRaisedButton:
                text: "Valider"
                pos_hint: {'center_x': 0.5}
                on_release: root.inscription()

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(50)
            spacing: dp(5)
            padding: dp(10)
            pos_hint: {'center_x': 0.5}

            MDLabel:
                text: "J'ai déjà un compte"
                halign: 'right'

            MDTextButton:
                text: "Se connecter"
                text_color: 0, 0, 1, 1
                on_release: root.compteexistant()
