<Ajouter>:
    name:'ajouter'

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"top": 1, "left": 1}
            on_release: root.retour()

        MDLabel:
            text: 'AJOUTER UN PRODUIT A VENDRE'
            halign: 'center'
            font_style: 'H5'
            size_hint_y: None
            pos_hint: {'center_x': 0.5,'center_y': 0.9}
            height: self.texture_size[1]
                        

        MDCard:
           
            orientation: 'vertical'
            size_hint: None, None
            size: "500dp", "500dp"
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            elevation: 20 # Effet de surélévation
            padding: '20dp'
            spacing: '5dp'


           
                
            MDTextField:
                id: name
                
                hint_text: "entrez le nom du prosuit"
                size_hint: None, None
                size: '300dp', '48dp'
                pos_hint: {'center_x': 0.5}

                
            MDTextField:
                id: description
                
                hint_text: "petite description du produits"
                size_hint: None, None
                size: '300dp', '48dp'
                pos_hint: {'center_x': 0.5}
            MDTextField:
                id: prix
               
                hint_text: "fixer un prix pour votre produit"
                
                size_hint: None, None
                size: '300dp', '48dp'
                pos_hint: {'center_x': 0.5}

            MDTextField:
                id: image
                
                hint_text: "entrez l'image de votre produit"
                
                size_hint: None, None
                size: '300dp', '48dp'
                pos_hint: {'center_x': 0.5}



            

            MDRaisedButton:
                text: 'valider'
                style:'elevated'
                pos_hint: {'center_x': 0.5}
                size_hint: None, None
                size: "400dp", "400dp"
                on_release: root.ajouter_prod()
        MDFloatLayout:
            spacing: '0dp'
                
            
            orientation: 'horizontal'
           
         
