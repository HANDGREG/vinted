<Ajouter>:
    name: 'ajouter'

    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        MDTopAppBar:
            title: "Ajouter un produit"
            elevation: 3
            left_action_items: [["arrow-left", lambda x: root.retour()]]

        MDLabel:
            text: "AJOUTER UN PRODUIT À VENDRE"
            halign: 'center'
            font_style: 'H5'
            size_hint_y: None
            height: self.texture_size[1]

        MDCard:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(380), dp(520)
            pos_hint: {'center_x': 0.5}
            elevation: 12
            padding: dp(20)
            spacing: dp(10)
            radius: [20, 20, 20, 20]

            MDTextField:
                id: name
                hint_text: "Nom du produit"
                icon_right: "tag"
                mode: "rectangle"

            MDTextField:
                id: description
                hint_text: "Description du produit"
                icon_right: "text"
                mode: "rectangle"

            MDTextField:
                id: prix
                hint_text: "Prix du produit"
                icon_right: "currency-xaf"
                mode: "rectangle"
                input_filter: 'float'

            MDTextField:
                id: image_path
                hint_text: "Chemin de l'image"
                icon_right: "image"
                mode: "rectangle"
                readonly: True

            MDRaisedButton:
                text: "Choisir une image"
                icon: "folder"
                pos_hint: {"center_x": 0.5}
                on_release: root.open_file_manager()

            MDRaisedButton:
                text: "Valider"
                pos_hint: {'center_x': 0.5}
                on_release: root.ajouter_prod()
