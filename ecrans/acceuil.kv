<HomeScreen>:
    name: 'home'

    
    # Contenu principal
    BoxLayout:
        orientation: 'vertical'

        # Bouton icône pour ouvrir le tiroir
        MDIconButton:
            icon: "menu"
            pos_hint: {"top": 1, "left": 1}
            on_release: nav_drawer.set_state("open")
        # RecycleView pour le contenu principal
        RecycleView:
            id: rv
            viewclass: "ReusableProductCard"
            
            RecycleBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: "5dp"
                default_size_hint: 1, None
                default_size: 300, 400
      
    # Bouton flottant
    MDFloatingActionButton:
        icon: "plus"
        md_bg_color: app.theme_cls.primary_color
        size_hint: None, None
        size: "20dp", "20dp"
        pos_hint: {"center_x": 0.9, "center_y": 0.1}
        on_release: root.ajouter()



# Tiroir de navigation
    MDNavigationDrawer:
        

        drawer_type: "standard"
        
        id: nav_drawer
        size_hint: None, 1
        width: "300dp"
        elevation: 10

        BoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            padding: "10dp"

            # Section supérieure (Home et Discussion)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: "10dp"

                MDLabel:
                    text: "Menu Principal"
                    font_style: "H6"
                    size_hint_y: None
                    height: self.texture_size[1]

                OneLineIconListItem:
                    text: "Home"
                    on_release: root.home()
                    IconLeftWidget:
                        icon: "home"
                    

                OneLineIconListItem:
                    text: "Discussion"
                    IconLeftWidget:
                        icon: "message"
                    # on_release: root.on_discussion_press()

            # Séparateur
            MDSeparator:

            # Section inférieure (Moi et Déconnexion)
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: "10dp"

                OneLineIconListItem:
                    text: "Moi"
                    on_release: root.profile()
                    IconLeftWidget:
                        icon: "account"
                  

                OneLineIconListItem:
                    text: "Déconnexion"
                    on_release: root.logout()
                    IconLeftWidget:
                        icon: "logout"
                    
