<Profile>:
    name: "profile"  # Nom de l'Ã©cran
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "10dp"

        FitImage:
            source: root.user.photo if root.user else "assets/default_profile.jpg"
            size_hint_y: None
            height: "200dp"

        MDLabel:
            text: root.user.username if root.user else "Nom d'utilisateur"
            bold: True
            size_hint_y: None
            height: "30dp"

        MDLabel:
            text: root.user.email if root.user else "Email"
            size_hint_y: None
            height: "30dp"



        MDRaisedButton:
            text: 'retour'
            on_release: root.retourhome()


